<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="buttonStyle">@style/ButtonApp</item>

    </style>

    <style name="ButtonApp" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_app</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>

    </style>
    <style name="TextViewApp">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="EditTextApp">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RadioButtonApp">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:buttonTint">@color/white</item>
    </style>
    <style name="DatePickerDialogApp" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

</resources>
